@{
    ViewData["Title"] = "Register";
    var id = "";
    if (ViewBag.Id != null)
    {
        id = ViewBag.Id;
    }
}
@model CreateUserCommandRequest
<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Register</h5>

                <form asp-controller="Home" asp-action="Register" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password"/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RefCode" class="form-label"></label>
                        @if (id == "")
                        {
                            <input asp-for="RefCode" class="form-control" />
                        }
                        else
                        {
                            <input asp-for="RefCode" class="form-control" value="@id" readonly="readonly" />
                        }

                        <span class="text-danger" asp-validation-for="RefCode"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>